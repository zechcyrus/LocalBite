<?xml version="1.0" encoding="utf-8"?>
<!-- Professional elevated card design -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Elevation shadow -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Main card surface -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_primary" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
    
</layer-list>