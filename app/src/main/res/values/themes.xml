<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Professional theme inspired by Zomato/Swiggy -->
    <style name="Theme.MYFOODAPP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_red</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Material Input Layout colors -->
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        
        <!-- Professional typography with Inter font -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MYFOODAPP.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MYFOODAPP.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MYFOODAPP.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MYFOODAPP.Body2</item>
    </style>
    
    <style name="Theme.MYFOODAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_red</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Professional Typography Styles -->
    <style name="TextAppearance.MYFOODAPP.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    
    <style name="TextAppearance.MYFOODAPP.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.MYFOODAPP.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.MYFOODAPP.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <!-- Light mode TextInputLayout styles -->
    <style name="Widget.MYFOODAPP.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxStrokeColor">@color/text_secondary</item>
        <item name="placeholderTextColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
    </style>
    
    <style name="Widget.MYFOODAPP.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
    </style>
</resources>